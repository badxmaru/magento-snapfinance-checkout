<?xml version="1.0" ?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="header.container">
            <block class="Snapfinance\Payment\Block\Banner" name="snap_banner_center_top" template="Snapfinance_Payment::banner.phtml" before="-">
                <arguments>
                    <argument name="page_section" xsi:type="string">homepage</argument>
                    <argument name="position" xsi:type="number">0</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Snapfinance\Payment\Block\Banner" name="snap_banner_center_bottom" template="Snapfinance_Payment::banner.phtml" after="-">
                <arguments>
                    <argument name="page_section" xsi:type="string">homepage</argument>
                    <argument name="position" xsi:type="number">1</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>

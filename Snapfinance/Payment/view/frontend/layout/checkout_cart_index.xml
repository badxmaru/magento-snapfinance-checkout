<?xml version="1.0" ?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Snapfinance\Payment\Block\Banner" name="snap_cart_banner" template="Snapfinance_Payment::cart_banner.phtml" after="checkout.cart.container">
                <arguments>
                    <argument name="page_section" xsi:type="string">checkout_cart</argument>
                    <argument name="position" xsi:type="number">2</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>

<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="snap_payment" translate="label" type="text" sortOrder="34" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Snap Finance Checkout</label>
                <field id="version" translate="label" type="label" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Extension Version</label>
                    <frontend_model>Snapfinance\Payment\Block\System\Config\Version</frontend_model>
                </field>
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="mode" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Mode</label>
                     <source_model>Snapfinance\Payment\Model\Config\Source\Mode</source_model>
                </field>
                <field id="client_id" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Stage Client Id</label>
                     <depends><field id="mode">stage</field></depends>
                </field>
                <field id="client_secret" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Stage Client Secret</label>
                     <depends><field id="mode">stage</field></depends>
                </field>
                 <field id="client_id_production" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Production Client Id</label>
                     <depends><field id="mode">production</field></depends>
                </field>
                <field id="client_secret_production" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Production Client Secret</label>
                     <depends><field id="mode">production</field></depends>
                </field>
                <field id="minimum_order_total" translate="label" type="text" sortOrder="88" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Minimum Order Total</label>
                    <frontend_class>validated-number</frontend_class>
                </field>
                <field id="maximum_order_total" translate="label" type="text" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Maximum Order Total</label>
                    <frontend_class>validated-number</frontend_class>
                </field>
                <field id="button_color" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Checkout Button Color</label>
                     <source_model>Snapfinance\Payment\Model\Config\Source\Color</source_model>
                </field>
                <field id="button_shape" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Checkout Button Shape</label>
                     <source_model>Snapfinance\Payment\Model\Config\Source\Shape</source_model>
                </field>
                <field id="button_height" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Checkout Button Height</label>
                    <source_model>Snapfinance\Payment\Model\Config\Source\Height</source_model>
                </field>
                <field id="sort_order" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Sort Order</label>
                    <frontend_class>validated-number</frontend_class>
                </field>
            </group>
        </section>
    </system>
</config>

<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="snap" translate="label" type="text" sortOrder="1200" showInDefault="1" showInWebsite="1" showInStore="0">
            <label>Snap Finance Checkout</label>
            <tab>general</tab>
            <resource>Snapfinance_Payment::configuration</resource>
            <group id="general" translate="label" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                <label>General Settings</label>
                <field id="version" translate="label" type="label" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Extension Version</label>
                    <frontend_model>Snapfinance\Payment\Block\System\Config\Version</frontend_model>
                </field>
                <field id="enabled" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="mode" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Mode</label>
                     <source_model>Snapfinance\Payment\Model\Config\Source\Mode</source_model>
                </field>
                <field id="merchant_key" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Merchant Key</label>
                </field>
                <field id="logo_style" translate="label" type="radios" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="0" >
                    <label>Logo Style</label>
                    <source_model>Snapfinance\Payment\Model\Config\Source\Style::getlogoOption</source_model>
                </field>
            </group>
             <group id="snap_allpage" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                <label>All Page Settings</label>
                <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Display Banner</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="position" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Banner Position</label>
                    <source_model>Snapfinance\Payment\Model\Config\Source\Position</source_model>
                </field>
                <field id="banner_style" translate="label" type="radios" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="0" >
                    <label>Banner Style</label>
                    <source_model>Snapfinance\Payment\Model\Config\Source\Style</source_model>
                </field>
            </group>
            <group id="snap_homepage" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                <label>Home Page Settings</label>
                <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Display Banner</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="position" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Banner Position</label>
                    <source_model>Snapfinance\Payment\Model\Config\Source\Position</source_model>
                </field>
                 <field id="banner_style" translate="label" type="radios" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="0" >
                    <label>Banner Style</label>
                    <source_model>Snapfinance\Payment\Model\Config\Source\Style</source_model>
                </field>
            </group>
            <group id="snap_checkout_cart" translate="label" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="0">
                <label>Checkout Cart Page Settings</label>
                <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Display Banner</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="position" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Banner Position</label>
                    <source_model>Snapfinance\Payment\Model\Config\Source\Position::getCartPosition</source_model>
                </field>
                 <field id="banner_style" translate="label" type="radios" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="0" >
                    <label>Banner Style</label>
                    <source_model>Snapfinance\Payment\Model\Config\Source\Style::getBannerOption</source_model>
                </field>
            </group>
        </section>
        <section id="payment">
            <group id="snap_payment" translate="label" type="text" sortOrder="34" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Snap Finance Checkout</label>
                <field id="version" translate="label" type="label" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Extension Version</label>
                    <frontend_model>Snapfinance\Payment\Block\System\Config\Version</frontend_model>
                </field>
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="mode" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Mode</label>
                     <source_model>Snapfinance\Payment\Model\Config\Source\Mode</source_model>
                </field>
                <field id="client_id" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Stage Client Id</label>
                     <depends><field id="mode">stage</field></depends>
                </field>
                <field id="client_secret" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Stage Client Secret</label>
                     <depends><field id="mode">stage</field></depends>
                </field>
                 <field id="client_id_production" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Production Client Id</label>
                     <depends><field id="mode">production</field></depends>
                </field>
                <field id="client_secret_production" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Production Client Secret</label>
                     <depends><field id="mode">production</field></depends>
                </field>
                <field id="minimum_order_total" translate="label" type="text" sortOrder="88" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Minimum Order Total</label>
                    <frontend_class>validated-number</frontend_class>
                </field>
                <field id="maximum_order_total" translate="label" type="text" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Maximum Order Total</label>
                    <frontend_class>validated-number</frontend_class>
                </field>
                <field id="button_color" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Checkout Button Color</label>
                     <source_model>Snapfinance\Payment\Model\Config\Source\Color</source_model>
                </field>
                <field id="button_shape" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Checkout Button Shape</label>
                     <source_model>Snapfinance\Payment\Model\Config\Source\Shape</source_model>
                </field>
                <field id="button_height" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Checkout Button Height</label>
                    <source_model>Snapfinance\Payment\Model\Config\Source\Height</source_model>
                </field>
                <field id="sort_order" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Sort Order</label>
                    <frontend_class>validated-number</frontend_class>
                </field>
                <field id="enabled_checkout_button" translate="label" type="select" sortOrder="150" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enabled Checkout Button</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="display_on_shopping_cart" translate="label comment" type="select" sortOrder="120" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Display on Shopping Cart</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Also affects mini-shopping cart.</comment>
                </field>
            </group>
        </section>
    </system>
</config>
